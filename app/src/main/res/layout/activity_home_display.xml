<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeDisplayRecyclerView"
            android:layout_marginBottom="53dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/floatingPictureUploader"
            android:padding="13dp"
            android:gravity="center"
            android:layout_marginBottom="65dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/floating_picture_uploader"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/icon_camera_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ProgressBar
            android:id="@+id/moreMatchedUserProgressBar"
            android:visibility="gone"
            android:layout_marginBottom="55dp"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/userInformationLayout"
            android:visibility="gone"
            android:layout_marginBottom="53dp"
            android:background="@color/background_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/floatingInformationLayout"
                android:elevation="11dp"
                android:layout_margin="11dp"
                android:orientation="vertical"
                android:background="@drawable/home_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:scrollbars="none"
                    android:background="@drawable/home_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:background="@drawable/home_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/userImageContainer"
                            android:layout_gravity="center_horizontal"
                            android:foregroundGravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/userImagePlaceholder"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/userInformationImage"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:padding="15dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:background="@drawable/transparent_gradient"
                                android:layout_width="match_parent"
                                android:layout_height="125dp">

                                <TextView
                                    android:id="@+id/userFullName"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/userLocation"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </FrameLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/userStatusText"
                                android:textSize="15sp"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_marginTop="23dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_marginHorizontal="11dp"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/profileDisplayButton"
                                    layout="@layout/include_icon_hollow_blue_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_marginTop="23dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/userMessageButton"
                                    layout="@layout/include_icon_hollow_blue_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/userSexualityLayout"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/userSexualityTitle"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/userSexualityOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/userBisexual"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userGay"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userLesbian"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userStraight"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userSugarDaddy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userSugarMommy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userToyBoy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userToyGirl"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                            <TextView
                                android:id="@+id/userInterestTitle"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/userInterestOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/bisexualInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/friendshipInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/gayInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/lesbianInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/relationshipInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/straightInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sugarDaddyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sugarMommyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/toyBoyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/toyGirlInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                            <TextView
                                android:id="@+id/userExperienceTitle"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/sexExperienceOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/sixtyNineExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/analSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/givenHeadExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/missionaryExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/oneNightStandExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/orgySexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/poolSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/receivedHeadExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/carSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/publicSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/cameraSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/threesomeExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sexToyExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/videoSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pictureCollectionRecycler"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </ScrollView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/bottomNavigationLayout"
            layout="@layout/include_bottom_navigation_layout"/>

        <include
            android:id="@+id/doubleButtonDialog"
            layout="@layout/include_double_button_dialog"/>

        <include
            android:id="@+id/singleButtonDialog"
            layout="@layout/include_single_button_dialog"/>

        <include
            android:id="@+id/emptyTimelineDialog"
            layout="@layout/include_dialog_activity_layout"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


