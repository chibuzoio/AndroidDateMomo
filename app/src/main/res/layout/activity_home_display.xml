<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeDisplayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/userInformationLayout"
            android:visibility="gone"
            android:background="@color/background_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:elevation="11dp"
                android:layout_margin="11dp"
                android:orientation="vertical"
                android:background="@drawable/home_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/userImageContainer"
                            android:layout_gravity="center_horizontal"
                            android:foregroundGravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/userImagePlaceholder"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/userInformationImage"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:padding="15dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_gravity="bottom"
                                android:background="@drawable/transparent_gradient"
                                android:layout_width="match_parent"
                                android:layout_height="150dp">

                                <TextView
                                    android:id="@+id/userFullName"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/userLocation"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:text="Minarelikoy"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/userStatusText"
                            android:textSize="12sp"
                            android:textColor="@color/edit_text"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/userSexualityLayout"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/userSexualityHeader"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/userSexualityOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/userBisexual"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userGay"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userLesbian"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userStraight"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userSugarDaddy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userSugarMommy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userToyBoy"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/userToyGirl"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                            <TextView
                                android:id="@+id/userInterestHeader"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/userInterestOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/bisexualInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/gayInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/lesbianInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/straightInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sugarDaddyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sugarMommyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/toyBoyInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/toyGirlInterest"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                            <TextView
                                android:id="@+id/userExperienceHeader"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/sexExperienceOptions"
                                app:flexWrap="wrap"
                                app:alignItems="stretch"
                                app:alignContent="stretch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <include
                                    android:id="@+id/sixtyNineExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/analSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/givenHeadExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/oneNightStandExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/orgySexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/poolSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/receivedHeadExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/carSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/publicSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/cameraSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/threesomeExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/sexToyExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <include
                                    android:id="@+id/videoSexExperience"
                                    android:visibility="gone"
                                    android:layout_marginEnd="11dp"
                                    android:layout_marginBottom="15dp"
                                    layout="@layout/include_blue_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.flexbox.FlexboxLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </ScrollView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/doubleButtonDialog"
            layout="@layout/include_double_button_dialog"/>

        <include
            android:id="@+id/singleButtonDialog"
            layout="@layout/include_single_button_dialog"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


