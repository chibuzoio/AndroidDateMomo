<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <include
        android:id="@+id/nameInput"
        layout="@layout/include_left_icon_input"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@id/dateInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <include
        android:id="@+id/dateInput"
        layout="@layout/include_right_icon_input"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@id/sexInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameInput"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <include
        android:id="@+id/sexInput"
        layout="@layout/include_input_field"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateInput"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


