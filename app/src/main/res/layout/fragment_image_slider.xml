<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/genericImageSlider"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/photoMenuIconLayout"
            android:gravity="end"
            android:padding="11dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/icon_menu_white"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pictureCounterLayout"
            android:gravity="center"
            android:layout_gravity="end"
            android:paddingVertical="4dp"
            android:paddingHorizontal="7dp"
            android:orientation="horizontal"
            android:layout_marginVertical="67dp"
            android:layout_marginHorizontal="11dp"
            android:background="@drawable/picture_counter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pictureCompositeCounter"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pictureMenuLayout"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/background_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_margin="15dp"
                android:paddingVertical="7dp"
                android:orientation="vertical"
                android:background="@drawable/menu_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/makeProfilePictureMenu"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingVertical="11dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="19sp"
                        android:text="Make Profile Picture"
                        android:textColor="@color/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/deletePictureMenu"
                    android:orientation="vertical"
                    android:paddingVertical="11dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="19sp"
                        android:text="Delete Picture"
                        android:textColor="@color/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/savePictureMenu"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingVertical="11dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="19sp"
                        android:text="Save Picture"
                        android:textColor="@color/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/pictureMenuCancel"
                    android:orientation="vertical"
                    android:paddingVertical="11dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Cancel"
                        android:textSize="19sp"
                        android:textColor="@color/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/doubleButtonDialog"
            layout="@layout/include_double_button_dialog"/>

        <include
            android:id="@+id/singleButtonDialog"
            layout="@layout/include_single_button_dialog"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


