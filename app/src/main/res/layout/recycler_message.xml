<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/senderMessageLayout"
        android:visibility="gone"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="77dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="end"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:layout_width="0dp"
                    android:layout_height="15dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:background="@drawable/blue_message_upper_layout"
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:background="@drawable/blue_message_lower_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/receiverMessageLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="2"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:background="@color/light_grey"
                    android:layout_width="0dp"
                    android:layout_height="15dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:background="@drawable/grey_message_upper_layout"
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:background="@drawable/grey_message_lower_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textColor="@color/edit_text"
                android:layout_marginHorizontal="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>


