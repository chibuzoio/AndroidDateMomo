<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messengerPropertyLayout"
    android:orientation="horizontal"
    android:paddingHorizontal="11dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/profilePictureLayout"
        android:layout_weight="2"
        android:foregroundGravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/profilePicturePlaceholder"
            android:background="@drawable/profile_picture_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/messengerProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/messengerDetailsLayout"
        android:layout_weight="5.5"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userFullName"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lastMessage"
            android:textSize="14sp"
            android:textColor="@color/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/messageStatusLayout"
        android:layout_weight="2.5"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        android:gravity="center_vertical|end"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/messageStatusCounter"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/message_status_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/messageStatusTime"
            android:textSize="14sp"
            android:textColor="@color/edit_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>


